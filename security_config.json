{
  "enable_authentication": false,
  "jwt_secret_key": "your-secret-key-here-change-in-production",
  "jwt_algorithm": "HS256",
  "jwt_expiration_hours": 24,
  
  "enable_rate_limiting": true,
  "requests_per_minute": 60,
  "requests_per_hour": 1000,
  "concurrent_sessions_per_ip": 5,
  
  "max_file_size_mb": 100,
  "allowed_audio_extensions": [".wav", ".mp3", ".flac", ".m4a", ".ogg", ".webm"],
  "allowed_mime_types": [
    "audio/wav",
    "audio/mpeg", 
    "audio/flac",
    "audio/mp4",
    "audio/ogg",
    "audio/webm"
  ],
  "enable_virus_scanning": false,
  "quarantine_suspicious_files": true,
  
  "max_text_length": 10000,
  "max_session_duration_hours": 24,
  "max_conversation_turns": 1000,
  
  "enable_audit_logging": true,
  "log_file_path": "/workspace/logs/security_audit.log",
  "log_retention_days": 30,
  
  "anonymize_logs": true,
  "encrypt_sensitive_data": true,
  "data_retention_days": 7,
  
  "security_headers": {
    "x_content_type_options": "nosniff",
    "x_frame_options": "DENY", 
    "x_xss_protection": "1; mode=block",
    "strict_transport_security": "max-age=31536000; includeSubDomains",
    "referrer_policy": "strict-origin-when-cross-origin",
    "content_security_policy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; connect-src 'self' ws: wss:; media-src 'self' blob: data:"
  },
  
  "cors_settings": {
    "allow_origins": ["*"],
    "allow_credentials": true,
    "allow_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "allow_headers": ["*"]
  },
  
  "monitoring": {
    "enable_intrusion_detection": true,
    "max_failed_attempts": 5,
    "lockout_duration_minutes": 15,
    "suspicious_activity_threshold": 10
  }
}